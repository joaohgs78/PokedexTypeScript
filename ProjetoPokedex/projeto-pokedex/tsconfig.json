{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "allowJs": true,
        "paths": {
            "@/*":["src"]
        }
    },
    "exclude": ["node_modules"]
}